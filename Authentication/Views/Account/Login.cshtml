@model LoginViewModel

<div class="container-fluid">

    <div class="row no-gutter">

        <div class="d-none d-md-flex col-md-6 col-lg-8 login-bg-image"></div>

        <div class="col-md-6 col-lg-4">

            <div class="login d-flex align-items-center py-5">

                <div class="container">

                    <div class="row">

                        <div class="col-md-9 col-lg-8 mx-auto">

                            <h3 class="mb-4">Kullanıcı Girişi</h3>

                            <form asp-controller="Account" asp-action="Login" method="post">

                                <div class="form-group mb-2">
                                    <label asp-for="Username"></label>
                                    <span asp-validation-for="Username" class="d-block"></span>
                                    <input asp-for="Username" class="form-control" autocomplete="off" placeholder="Kullanıcı adını giriniz" />
                                    <small class="form-text text-muted">Bilgisayar kullanıcı adınız.</small>
                                </div>

                                <div class="form-group mb-2">
                                    <label asp-for="Password"></label>
                                    <span asp-validation-for="Password" class="d-block"></span>
                                    <input asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" />
                                    <small class="form-text text-muted">Bilgisayar şifreniz.</small>
                                </div>

                                <div class="form-group mb-2">
                                    <label asp-for="Captcha"></label>
                                    <div class="input-group" style="cursor: pointer">
                                        <div class="input-group-prepend">
                                            <img id="img-captcha" src="~/get-captcha-image" />
                                        </div>
                                        <input type="text" class="form-control" placeholder="Güvenlik Kodunu Giriniz" asp-for="Captcha.CaptchaCode" maxlength="4" autocomplete="off" />
                                    </div>
                                    <small id="emailHelp" class="form-text text-muted">Kodu yenilemek için resme tıklayınız.</small>
                                    <span asp-validation-for="Captcha.CaptchaCode"  class="d-block"></span>
                                    @Html.ValidationMessage("Captcha")
                                </div>

                                <div class="form-group form-check mb-2">
                                    @*<input type="checkbox" class="form-check-input" id="exampleCheck1">*@
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label"></label>
                                    @*<label class="form-check-label" for="exampleCheck1">Beni hatırla</label>*@
                                </div>

                                <div class="my-2">
                                    <div asp-validation-summary="ModelOnly"></div>
                                    @Html.ValidationSummary(excludePropertyErrors: true)
                                    @Html.ValidationMessage("ERR")
                                </div>

                                <button type="submit" class="btn btn-primary btn-block">Giriş</button>

                                <div class="text-center my-4">
                                    <a class="small" href="#">Şifremi Unuttum</a> | <a class="small" href="@Url.Content("~/Account/Register")">Kullanıcı İşlemleri</a>
                                </div>

                            </form>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>


@section scriptSection {

    <script>

        $("#img-captcha").click(function () {
            d = new Date();
            $("#img-captcha").attr("src", "/get-captcha-image?" + d.getTime());
        });

    </script>

}